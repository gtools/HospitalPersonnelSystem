@{
    ViewData["Title"] = $"账号管理 - 权限查看 - {ViewData["RoleUserName"]} - {ViewData["RoleEmpName"]}";
    ViewData["Controller"] = "Admin";
}

<h1>@ViewData["Title"]</h1>
<div>
    <a asp-action="UserIndex" data-toggle="tooltip" data-placement="left" title="返回"><i class="fa fa-arrow-alt-circle-left fa-lg"></i></a>
</div>
<hr />
<dl>
    @foreach (var claim in ViewBag.Claims)
    {
        <dd>@claim.Value</dd>
    }
</dl>


@model IEnumerable<HospitalPersonnelSystem.Models.SysEmp>

@{
    ViewData["Title"] = "人员管理";
    ViewData["Controller"] = "SysEmp";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" data-toggle="tooltip" data-placement="left" title="创建"><i class="fa fa-plus-circle fa-lg"></i></a>
</p>
<table class="table table-bordered table-striped" data-sort="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SysDept)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComNation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComPolitical)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoliticalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityCard)
            </th>
            <th class="filter-select filter-exact" data-placeholder="请选择">
                @Html.DisplayNameFor(model => model.IsPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th class="filter-select filter-exact" data-placeholder="请选择">
                @Html.DisplayNameFor(model => model.IsStop)
            </th>
            <th class="sorter-false filter-false">操作</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SysDept)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComNation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComPolitical)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoliticalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsStop)
            </th>
            <th></th>
        </tr>
        <tr>
            <th colspan="17" class="ts-pager">
                <div class="form-inline">
                    <div class="btn-group btn-group-sm mx-1" role="group">
                        <button type="button" class="btn btn-secondary first" title="首页">
                            <i class="fa fa-fast-backward first"></i>
                        </button>
                        <button type="button" class="btn btn-secondary prev" title="上一页">
                            <i class="fa fa-backward prev"></i>
                        </button>
                    </div>
                    <span class="pagedisplay"></span>
                    <div class="btn-group btn-group-sm mx-1" role="group">
                        <button type="button" class="btn btn-secondary next" title="下一页">
                            <i class="fa fa-forward next"></i>
                        </button>
                        <button type="button" class="btn btn-secondary last" title="尾页">
                            <i class="fa fa-fast-forward last"></i>
                        </button>
                    </div>
                    <select class="form-control-sm custom-select pr-4 pagesize" title="选择页面行数">
                        <option selected="selected" value="10">10</option>
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="all">全部</option>
                    </select>
                    <select class="form-control-sm custom-select px-4 mx-1 pagenum" title="选择页码"></select>
                </div>
            </th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Spell)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SysDept.DeptName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComGender.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComNation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComPolitical.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PoliticalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdentityCard)
                </td>
                <td>
                    @item.IsPost.ToString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @item.IsStop.ToString()
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmpCode" data-toggle="tooltip" data-placement="left" title="编辑"><i class="fa fa-edit"></i></a>&nbsp;&nbsp;|&nbsp;&nbsp;
                    <a asp-action="Details" asp-route-id="@item.EmpCode" data-toggle="tooltip" data-placement="top" title="查看"><i class="fa fa-info-circle"></i></a> @*|
                        <a asp-action="Delete" asp-route-id="@item.EmpCode">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script type="text/javascript">
        //排序
        $(function () {
            $('[data-sort="table"]').trigger('sorton', [[[0, 0]]]);
        });
    </script>
}

@model HospitalPersonnelSystem.Models.SysEmpType

@{
    ViewData["Title"] = "人员类别 - 创建";
    ViewData["Controller"] = "SysEmpType";
}

<h1>@ViewData["Title"]</h1>

<div>
    <a asp-action="Index" data-toggle="tooltip" data-placement="left" title="返回"><i class="fa fa-arrow-alt-circle-left fa-lg"></i></a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spell" class="control-label"></label>
                <input asp-for="Spell" class="form-control" readonly />
                <span asp-validation-for="Spell" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="保&nbsp;&nbsp;存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(function () {
            $("#Name").change(function () {
                var name = $(this).val();
                $.get("/Home/GetSpell?chinese=" + encodeURI(name), function (result) {
                    $("#Spell").val(result);
                });
            });
        });
    </script>
}

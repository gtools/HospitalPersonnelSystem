        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sort)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sort)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SysNavbarType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SysNavbarType.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Controller)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Controller)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Action)
